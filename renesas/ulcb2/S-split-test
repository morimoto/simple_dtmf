#! /bin/sh
TOP=`readlink -f "$0" | xargs dirname | xargs dirname | xargs dirname`

echo "+-ulcb--+"
echo "|(i) ( )|"
echo "+-------+"
echo "+-kf----+"
echo "|( ) ( )|"
echo "|( ) (o)|"
echo "+-------+"

test() {
	DIR=$1
	LIST=$2

	echo "Split test on ${DIR}"
	for list in ${LIST}
	do
		${TOP}/script/sample-test-loopback.sh -o plughw:1,2 -f ${TOP}/renesas/${DIR}/${list}.wav -e ${list}
	done
}

test 44100 "19 28 37 46 50"
test 48000 "01 29 38 47 56"
